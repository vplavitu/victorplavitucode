//homework 1
//work inspired by Manfred Mohr "Lady Quark", plotter drawing ink on paper, 50cm x 50cm, 1972
//i like the optical illusion//repetition 
//squares with in a larger square
//lots of copy and paste

//borrowed code found from tutorial on how to change colors


int largo = 20;
int r = 0;
int g = 0 ;
int b = 0;

void setup(){
size(600,600);
}

void draw() 
{
 
  frameRate(2);
for (int x = 0; x < width; x+=20) 
{
  for (int y = 0; y < height; y+=20)
  {
    stroke(255);
    fill(r,g,b);
    rect(x,y,largo-1,largo-1);
}
    r +=mouseX+ random(25);
  g += mouseX+random(25);
    b += mouseX+random(25);
    
  
  if ( r > 255 )
{
    r = 0;
}
  if ( g > 255 )
{
    g = 0;
}

  if ( b > 255 )
{
    b = 0;
}
} 

